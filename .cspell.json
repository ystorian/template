// File sourced from https://github.com/ystorian/template
// Format: https://cspell.org/configuration/
// This file is a template for all Ystorian' projects and contains the default
// settings.
// It is refreshed by `cly`.
// It also imports settings from `.cspell.config.json`, use that file to add new
// words and change settings.
{
	"$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
	"version": "0.2",
	"language": "en",
	// List of words to be always considered correct.
	"words": [
		"Ally",
		"cly",
		"Deby",
		"Irys",
		"Nyquyst",
		"Vyolet",
		"Ysto",
		"Ystorian",
		"ystorians",
		"Yzo"
	],
	// Ignore generated files.
	"ignorePaths": [
		"Cargo.lock"
	],
	// Ignore code blocks (```...```).
	"ignoreRegExpList": [
		"/^\\s*```(.|\\n)+?^\\s*```/gm"
	],
	// Import additional project settings.
	"import": [
		".cspell.config.json"
	]
}
