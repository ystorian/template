// File sourced from https://github.com/ystorian/template
// Format: https://cspell.org/configuration/
// This file is a template for all Ystorian' projects and contains the default
// settings.
// It also imports settings from `.cspell.config.json`, this file must be
// created at the root of the repositories to add new words and change settings.
{
	// Version of the setting file, always "0.2".
	"version": "0.2",
	// Current active spelling language.
	"language": "en",
	// List of words to be always considered correct.
	"words": [
		"Ally",
		"cly",
		"Deby",
		"Irys",
		"Nyquyst",
		"Vyolet",
		"Ysto",
		"Ystorian",
		"ystorians",
		"Yzo"
	],
	// Ignore generated files.
	"ignorePaths": [
		"Cargo.lock"
	],
	// Import additional project settings.
	"import": [
		".cspell.config.json"
	]
}
